{
  "name": "wedding-package-maker",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "yarn": "1.12.3",
    "npm": "6.4.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "coverageReporters": [
      "text"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bootstrap": "^4.1.3",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "enzyme-to-json": "^3.3.5",
    "express": "^4.16.4",
    "jquery": "^3.3.1",
    "lodash": "^4.17.11",
    "popper.js": "^1.14.6",
    "prop-types": "^15.6.2",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "^2.1.1",
    "react-select": "^2.1.2",
    "react-test-renderer": "^16.7.0",
    "redux": "^4.0.1"
  },
  "scripts": {
    "client:react": "react-scripts start",
    "build": "cross-env react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "prod:server:build": "cross-env webpack --config webpack.server.config --mode production",
    "prod:server:build:development": "cross-env webpack --config webpack.server.config --mode development",
    "prod:server": "node server.bundle.js ",
    "prod:server:local": "nodemon --exec babel-node server.js",
    "dev:proxy:server": "cross-env PORT=9000 NODE_ENV=development npm run prod:server:local",
    "prod:run": "npm run build && npm run prod:server",
    "postinstall": "npm run build && npm run prod:server:build",
    "start": "npm run prod:server",
    "start:local": "npm run prod:server:build:development && npm run dev:proxy:server | npm run client:react"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "cross-env": "^5.2.0",
    "node-sass": "^4.9.0",
    "nodemon": "^1.18.9",
    "webpack-cli": "^3.1.2",
    "webpack-node-externals": "^1.7.2"
  },
  "proxy": "http://localhost:9000",
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "nodemonConfig": {
    "ignore": ["test/*", "docs/*", "src/*", "node_modules"],
    "delay": "2500",
    "watch": ["Server/**/*","server.js"]
  }
}
